<Window x:Class="USort.Updater"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USort"
        mc:Ignorable="d"
        Title="{DynamicResource l_NameDown}" Height="211.316" Width="555.977" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="UpdaterText" HorizontalAlignment="Center" Margin="10,10,10,0" TextWrapping="Wrap" Text="{DynamicResource l_Connecting}" VerticalAlignment="Top" FontSize="16" Width="530" Height="128" TextAlignment="Center"/>
        <Button x:Name="Yes_Button" Content="{DynamicResource l_Yes}" HorizontalAlignment="Left" Margin="100,142,0,0" VerticalAlignment="Top" Width="74" FontSize="16" Click="Yes_Button_Click"/>
        <Button x:Name="No_Button" Content="{DynamicResource l_No}" HorizontalAlignment="Left" Margin="360,142,0,0" VerticalAlignment="Top" Width="76" FontSize="16" Click="No_Button_Click"/>
    </Grid>
</Window>
